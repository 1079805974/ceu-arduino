#include "arduino/arduino.ceu"

input bool PIN_02;

#ifdef CEU_PIN_02_PULL
{ pinMode(2, CEU_PIN_02_PULL); }
#endif

#ifndef CEU_PIN_02_MODE
#define CEU_PIN_02_MODE CHANGE
#endif

{
    EICRA = (EICRA & ~((1<<ISC00) | (1<<ISC01))) | (CEU_PIN_02_MODE << ISC00);
    EIMSK |= (1<<INT0);
}

spawn async/isr [_INT0_vect] do
    //{digitalWrite(13, !digitalRead(13));}
    emit PIN_02(_digitalRead(2) as bool);
end
