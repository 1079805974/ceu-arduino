#include "arduino/isr/timer.ceu"
#include "arduino/isr/pin-02.ceu"

output int PIN_13;

loop do
    watching INT_PIN_02 do
        var int x = 0;
        every 500ms do
            x = 1 - x;
            emit PIN_13(x);
        end
    end
    await 1s;     // debouncing
    await INT_PIN_02;
    await 1s;     // debouncing
end
