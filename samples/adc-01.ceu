native/pre do
    ##define CEU_FEATURES_ISR_SLEEP
end

#include "arduino/isr/timer.ceu"
#include "arduino/isr/adc.ceu"

output on/off PIN_13;

loop do
    await 1s;
    emit ADC_REQUEST(_A0);
    await ADC_DONE;
    var int value = adc_channels[_A0-_A0].value;
    if value > 1000 then
        emit PIN_13(on);
    else
        emit PIN_13(off);
    end
end
