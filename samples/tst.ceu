#include "arduino.ceu"

input  int PIN02;
input  int PIN08;

output int PIN12;
output int PIN13;

loop do
    var int v;
    v = await PIN02 until v;
    v = await PIN08 until v;

    loop i in 3 do
        emit PIN12 => _HIGH;
        await 500ms;
        emit PIN12 => _LOW;
        await 500ms;
    end
    loop i in 3 do
        emit PIN13 => _HIGH;
        await 500ms;
        emit PIN13 => _LOW;
        await 500ms;
    end
end
